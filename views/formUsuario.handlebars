{{#if usuario}}
<h1>Atualizar Cadastro</h1>
<form action="/usuarios/{{usuario.id}}/atualizar" method="post">

{{else}}

<h1>Cadastra-se</h1>
<form action="/usuarios/novo" method="post">

{{/if}}
    <div>
        <label for="nickname">Nickname:</label>
        <input type="text" id="nickname" name="nickname" value="{{usuario.nickname}}" />
    </div>
    <div>
        <label for="nome">Nome</label>
        <input type="text" id="nome" name="nome" value="{{usuario.nome}}">
    </div>
    {{#if usuario}}
    <input type="submit" value="Atualizar" />
    {{else}}
    <input type="submit" value="Cadastrar" />
    {{/if}}
</form>

<style>
    body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f4f4f4;
    }
    form {
        max-width: 400px;
        margin: 20px auto;
        background: #fff;
        padding: 20px;
        border-radius: 5px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }
    h1 {
        text-align: center;
        color: #333;
    }
    label {
        display: block;
        margin-bottom: 5px;
        color: #666;
    }
    input[type="text"] {
        width: 100%;
        padding: 10px;
        margin-bottom: 15px;
        border: 1px solid #ccc;
        border-radius: 5px;
        box-sizing: border-box;
    }
    input[type="submit"] {
        width: 100%;
        background: #007bff;
        border: none;
        color: #fff;
        padding: 10px;
        border-radius: 5px;
        cursor: pointer;
        font-size: 16px;
    }
    input[type="submit"]:hover {
        background: #0056b3;
    }
</style>